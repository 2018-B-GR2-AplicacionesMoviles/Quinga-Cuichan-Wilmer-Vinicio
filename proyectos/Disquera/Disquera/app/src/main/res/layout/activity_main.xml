<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="@string/boton_artistas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_Artista"
            style="@android:style/Widget.Button.Inset"
            android:fontFamily="casual"
            app:layout_constraintTop_toBottomOf="@+id/button_disquera" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button_Cancion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>
    <Button
            android:text="@string/disquera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_disquera"
            style="@android:style/Widget.Button.Inset"
            android:fontFamily="casual"
            android:layout_marginTop="48dp" android:layout_marginBottom="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_Artista" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="27dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_Cancion" android:text="@string/tituloCancioNB"
            android:fontFamily="casual" style="@android:style/Widget.Button.Inset"
            app:layout_constraintTop_toBottomOf="@+id/button_Artista" android:layout_marginBottom="233dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="29dp"/>
</android.support.constraint.ConstraintLayout>